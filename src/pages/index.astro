---
import Head from '../components/Head.astro'
import Header from '../components/Header.tsx'
import ProjectCard from '../components/ProjectCard.tsx'
import Tag from '../components/Tag.tsx'
import AnimatedBottomBorderLink from '../components/AnimatedBottomBorderLink.tsx'

---

<html lang="en"> <!-- class="dark" -->
<head>
    <Head />

    <style lang="scss">
    h1 {
        @apply text-5xl md:text-7xl font-bold;
    }
    h2 {
        @apply text-3xl md:text-5xl;
    }

    .link-button {
        max-height: 48px;
        max-width: 48px;

        &#resume-icon {
            height: 48px;
            width: 48px;
        }
    }
    

    .data-section {
        @apply flex flex-col gap-10 content-center items-center justify-center mt-24;
    }
    </style>
</head>

<body class="bg-white text-black dark:bg-gray-800 dark:text-white">
    <Header>
        <AnimatedBottomBorderLink href="#projects">Projects</AnimatedBottomBorderLink>
        <AnimatedBottomBorderLink href="#skills">Skills</AnimatedBottomBorderLink>
        <AnimatedBottomBorderLink href="#contact">Contact</AnimatedBottomBorderLink>
        <AnimatedBottomBorderLink href="/blog">Blog</AnimatedBottomBorderLink>
    </Header>

    <main>
        <section class="data-section">
            <h1 class="text-center">
                Hi, I am
                <span class="text-pink-700">Muhammad Hamza.</span>
            </h1>
            <h2>A Web Developer</h2>
            <p class="-mt-7 text-lg">and a lover of anime and technology.</p>

            <div class="flex gap-4 justify-center">
                <a href="#">
                    <img class="link-button" id="resume-icon" src="/icons/resume-icon-dark.svg">
                </a>
                <a href="https://github.com/hamza1311/">
                    <img class="link-button" src="/icons/GitHub-Dark.png">
                </a>
                <a href="https://www.linkedin.com/in/hamza1311/">
                    <img class="link-button" src="/icons/LinkedIn.png">
                </a>
            </div>
        </section>

        <section class="data-section" id="projects">
            <h2>Projects</h2>

            <div class="flex flex-col gap-8 md:flex-row md:gap-6">
                <ProjectCard project="clurry" />
                <ProjectCard project="clurry" />
                <ProjectCard project="clurry" />
            </div>
        </section>


        <section class="data-section" id="skills">
            <h2>Skills</h2>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-5">
                <span class="tag">Rust</span>
                <span class="tag">Yew</span>
                <span class="tag">TypeScript</span>
                <span class="tag">React</span>
                <span class="tag">Next.JS</span>
                <span class="tag">Kotlin</span>
                <span class="tag">HTML</span>
                <span class="tag">CSS</span>
            </div>
        </section>

        <section class="data-section mb-12" id="contact">
            <h2>Contact</h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                <a href="mailto:muhammadhamza1311@gmail.com" class="tag">Email</a>
                <button class="tag">Discord</button>
                <a href="https://matrix.to/#/@weeb69:matrix.org" target="_blank" class="tag">Matrix</a>
            </div>
        </section>
    </main>
</body>
</html>
