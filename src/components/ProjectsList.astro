import AnimatedBottomBorderLink from './AnimatedBottomBorderLink.tsx'

const projects = [
    {
        title: 'Clurry',
        link: 'hamza1311/clurry',
        description: 'Lorem ipsum dolor, sit amet consectetur adipisicing elit. Illo enim asperiores',
        languages: ['Rust']
    },
    {
        title: 'Gloo',
        link: 'rustwasm/gloo',
