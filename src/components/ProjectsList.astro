            </h3>

            <p class="text-center">
                {it.description}
            </p>

            <section class="flex gap-4">
                {it.languages.map(lang => <span class="text-sm">{lang}</span>)}
            </section>

            <AnimatedBottomBorderLink href={`https://github.com/${it.link}`}  className="pb-7 hover:before:w-6">
                <img style="width: 24px; height: 24px" src="/icons/GitHub-Dark.png" />
            </AnimatedBottomBorderLink>

    </article>
    ))}
</div>